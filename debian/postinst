#!/bin/sh
# postinst script for iquest
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
# create iquest group if it isn't already there
        if ! getent group iquest >/dev/null; then
            addgroup --quiet --system iquest
        fi


        chmod 2770 /var/lib/iquest/data
        chown www-data:iquest /var/lib/iquest/data

        chmod 775 /var/lib/iquest/smarty
        chown www-data:iquest /var/lib/iquest/smarty

        chmod 660 /etc/iquest/config.php
        chmod 660 /etc/iquest/config.auth.php
        chown www-data:iquest /etc/iquest/config.php
        chown www-data:iquest /etc/iquest/config.auth.php

        touch /var/log/iquest
        chown www-data:iquest /var/log/iquest
        chmod 664 /var/log/iquest

        touch /var/lib/iquest/traccar-cookie.txt
        chown www-data:iquest /var/lib/iquest/traccar-cookie.txt
        chmod 660 /var/lib/iquest/traccar-cookie.txt

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
